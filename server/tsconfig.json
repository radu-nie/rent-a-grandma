{
    "compileOnSave": true,
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "../",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noLib": false,
        //"mapRoot": "../dist/server",
        "module": "commonjs",
        "outDir": "../dist/server",
        "sourceMap": false,
        "target": "es2017",
        "allowJs": false,
        "typeRoots": ["../node_modules/@types"],
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "declarationMap": true,
        "inlineSourceMap": true
    },
    "include": [
        "**/*.ts"
    ]
}