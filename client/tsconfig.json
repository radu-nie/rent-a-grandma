{
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "../",
    "outDir": "../dist/client",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    //"mapRoot": "./",
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}